@model BookShare.MVC.Models.CategoriaViewModel


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-md-offset-3 container-login">
                <div class="form-horizontal">
                    <h4>Editar Categoria</h4>
                    <hr />
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.CategoriaId)
                        <div class="form-group">
                            <div class="col-md-12">
                                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-12">
                                <input type="submit" value="Salvar" class="btn btn-primary col-md-5" />
                                <a href='@Url.Action("Index", "Categorias")' class="btn btn-danger col-md-5 col-md-offset-2">Cancelar</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
