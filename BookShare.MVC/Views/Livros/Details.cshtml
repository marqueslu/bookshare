@model BookShare.MVC.Models.LivroViewModel

@{
    ViewBag.Title = "Details";
}

@section styles{
    <style>
       
        article, dt{
            margin-top: 5px;
        }

        .img-card{
            padding: 0;
        }
        .btn{
            margin-top: 2em;
        }
    </style>
    }

    <div class="container-fluid container-details">
        <div class="row">
            <div class="col-md-12">
                <h2>@Html.DisplayFor(model => model.Titulo)</h2>
            </div>
            <div class="col-md-6">
                <img src="@Html.DisplayFor(model => model.Foto)" border="0" class="img-card col-md-12" />
            </div>
            <div class="col-md-6">
                <article>
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.Titulo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Titulo)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Sinopse)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Sinopse)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Isbn)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Isbn)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.AnoLancamento)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AnoLancamento)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.AutorId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Autor.Nome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.CategoriaId)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Categoria.Nome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Editora)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Editora.Nome)
                        </dd>

                    </dl>
                </article>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <p>

                    <a href="/Livros/Edit/@Model.LivroId" class="btn btn-primary">Editar</a>
                    <a href="/Livros/Delete/@Model.LivroId" class="btn btn-danger">Remover</a>
                    <a href='@Url.Action("Index", "Livros")' class="btn btn-default">Voltar</a>
                </p>
            </div>
        </div>
    </div>