@model IEnumerable<BookShare.MVC.Models.EditoraViewModel>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid container-details">
    <div class="row">
        <div class="col-md-6">
            <h2>Editoras</h2>

            <p>
                <a href='@Url.Action("Create", "Editoras")' class="btn btn-default">Nova Editora</a>

            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            <a href="/Editoras/Edit/@item.EditoraId" class="btn btn-primary">Editar</a>
                            <a href="/Editoras/Delete/@item.EditoraId" class="btn btn-danger">Excluir</a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
